<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_add_icon"

        android:layout_width="60dp"
        android:layout_height="60dp"></ImageView>

    <TextView
        android:id="@+id/tv_add_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1111111111111111"
        android:layout_toRightOf="@id/iv_add_icon"></TextView>

    <TextView
        android:id="@+id/tv_size"
        android:text="22222222222222"
        android:layout_toRightOf="@id/iv_add_icon"
        android:layout_below="@id/tv_add_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">
      </TextView>


</RelativeLayout>
